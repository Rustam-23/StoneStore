@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Create New Product
            </a>
        </div>
    </div>
    <br/>
    <br/>
    
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width: 50%">@obj.Name</td>
                    <td style="width: 30%">@obj.Price</td>
                    <td class="w-75 btn-group" role="group">
                        <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exists</p>
    }
</div>